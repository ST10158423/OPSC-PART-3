<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Settings Button at the top-right corner -->
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#1E88E5"
        android:text="Settings"
        android:textColor="@android:color/white"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        android:textSize="16sp" />

    <!-- Title Text at the top center -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnSettings"
        android:layout_marginTop="24dp"
        android:text="Select Your Area"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Grid layout for area buttons -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSettings"
        android:layout_marginTop="100dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:rowCount="3">

        <!-- Area Buttons with improved spacing -->
        <Button
            android:id="@+id/btnUmhlanga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Umhlanga"
            android:textSize="18sp"
            android:backgroundTint="#1E88E5"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnDurbanNorth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Durban North"
            android:textSize="18sp"
            android:backgroundTint="#1E88E5"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnWestville"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Westville"
            android:textSize="18sp"
            android:backgroundTint="#1E88E5"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnNorthBeach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="North Beach"
            android:textSize="18sp"
            android:backgroundTint="#1E88E5"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnLaLucia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="La Lucia"
            android:textSize="18sp"
            android:backgroundTint="#1E88E5"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnBluff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Bluff"
            android:textSize="18sp"
            android:backgroundTint="#1E88E5"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp"
            android:elevation="2dp" />
    </GridLayout>

    <!-- View Map Button at the bottom -->
    <Button
        android:id="@+id/btnViewMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="#388E3C"
        android:elevation="4dp"
        android:paddingVertical="12dp"
        android:text="View Map"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>
